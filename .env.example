# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=lscs_core
DB_USERNAME=mysql
DB_PASSWORD=your_password_here

# Server
GO_ENV=development
PORT=8080

# Authentication (API Keys)
JWT_SECRET=your_jwt_secret_here
GOOGLE_CLIENT_ID=your_google_client_id

# OAuth (Web UI Sessions)
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Session (Web UI)
SESSION_SECRET=your_session_secret_here
SESSION_DURATION=86400
SESSION_REMEMBER_DURATION=2592000

# CORS - comma-separated list of allowed origins
# defaults to http://localhost:3000 if not set
ALLOWED_ORIGINS=http://localhost:3000,https://core.lscs.org

# JWT expiration (in days)
JWT_DEV_EXPIRY_DAYS=30
JWT_PROD_EXPIRY_DAYS=365

# Logging
LOG_LEVEL=info

# Goose migrations (format: mysql://user:pass@host:port/database)
# GOOSE_DBSTRING=mysql://user:pass@localhost:3306/lscs_core
